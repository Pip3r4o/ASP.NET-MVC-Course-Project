<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>@ViewBag.Title - Galaxy Storm - the Game</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/public")
</head>
<body>
    @Html.Partial("_NavbarPartial")

    <!-- loader -->
    <div id="site-loader">
        <div class="loader"></div>
    </div>
    <!-- loader -->

    <div id="site-wrap">

        <div id="bg">
            <div id="img"></div>
            <div id="overlay"></div>
        </div>

        <div class="container body-content">
            <div class="row">
                @{ Html.RenderPartial("_SideMenuPartial");}
                <div class="col-md-9">
                    <div>
                        @if (TempData["Error"] != null)
                        {
                            <div class="panel panel-danger">
                                <div class="panel-heading text-center">@TempData["Error"]</div>
                            </div>
                        }
                        @if (TempData["Info"] != null)
                        {
                            <div class="panel panel-info">
                                <div class="panel-heading panel-info">@TempData["Info"]</div>
                            </div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="panel panel-success">
                                <div class="panel-heading text-center">@TempData["Success"]</div>
                            </div>
                        }
                    </div>

                    @RenderBody()
                </div>
            </div>

            <footer>
                <hr />
                <p class="text-center">Peter Kanev &copy; @DateTime.Now.Year - Galaxy Storm - the Game</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>