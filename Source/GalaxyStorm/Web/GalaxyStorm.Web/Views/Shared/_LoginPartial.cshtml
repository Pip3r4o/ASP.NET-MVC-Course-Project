@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { Area = "Public"}, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/#"><i class="ion-ios-bell size-18"> </i> <span class="badge">1</span></a>
            </li>
            <li class="dropdown">
                <a href="/#" class="dropdown-toggle" data-toggle="dropdown"><i class="ion-wrench size-18"> </i> @User.Identity.GetUserName() <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="/Profile/Preview"><i class="ion-wrench size-18"> </i> Manage</a></li>
                    <li class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="ion-power size-18"> </i> Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}