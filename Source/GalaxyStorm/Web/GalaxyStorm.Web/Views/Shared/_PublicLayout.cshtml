<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>@ViewBag.Title - Galaxy Storm - the Game</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/public")
</head>
<body>
    @Html.Partial("_NavbarPartial")

    <!-- loader -->
    <div id="site-loader">
        <div class="loader"></div>
    </div>
    <!-- loader -->

    <div id="site-wrap">

        <div id="bg">
            <div id="img"></div>
            <div id="overlay"></div>
            <canvas id="js-canvas"></canvas>
        </div>

        <div class="container body-content">
            @RenderBody()

            <footer>
                <hr />
                <p class="text-center">Peter Kanev &copy; @DateTime.Now.Year - Galaxy Storm - the Game</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/public")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>