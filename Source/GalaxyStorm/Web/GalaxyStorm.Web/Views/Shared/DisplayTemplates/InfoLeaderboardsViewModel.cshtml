@model IList<GalaxyStorm.ViewModels.Info.InfoLeaderboardsViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    {
        var className = string.Format("lb-pos-{0}", i);
        var mdel = Model[i];

        <div class="row @className">
            <div class="col-md-1">@(i+1)</div>
            <div class="col-md-3">@mdel.DisplayName</div>
            <div class="col-md-1">@mdel.PlanetPoints</div>
            <div class="col-md-1">@mdel.NeutralPoints</div>
            <div class="col-md-1">@mdel.CombatPoints</div>
            <div class="col-md-2">@mdel.TotalPoints</div>
            <div class="col-md-3">@mdel.ShardName</div>
        </div>
    }
}
